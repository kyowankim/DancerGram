<% @follower_suggestions.each do |account| %>
    <div class="recommended-follower">
        <div class="row">
            <div class="col-lg-2">
                <%= link_to check_profile_picture(account, 50), profile_path(account.username) %>
            </div>
            <div class="col-lg-10">
                <%= link_to account.username, profile_path(account.username), class:"text-decoration-none text-black" %>
                <p><%= account.created_at > 2.days.ago ? "New to instagram" : "Followed by X users" %></p>
            </div>
        </div>
    </div>
<% end %>