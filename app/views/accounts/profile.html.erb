<div class="container">
    <div class="row">
        <div class="col-4">
            <%= check_profile_picture(@account, "300px") %>
            
        </div>
        <div class="col-8 text-start" >
            <div class="col-6">
                <%= link_to "Edit Profile", edit_account_registration_path(current_account), class:"btn btn-primary float-end" if can_edit_profile?(@account.id) %>
                <h1><%= @account.username %></h1>
                <br>
            </div>
            <div class="row profile-stats">
                <div class="col-4">
                    <%= @account.posts.count %> Posts 
                </div>
                <div class="col-4">
                    <%= @account.total_followers %> Followers    
                </div>
                <div class="col-4">
                    <%= @account.total_following %> Following 
                </div>
            </div>
            <p> <%= @account.fullname %></p>
            <p> <%= simple_format @account.description %> </p>
            <p> <%= link_to @account.website, @account.website %></p>
            
        </div>
    </div>

    <div class="row profile-posts" >
        <% @posts.each do |post| %>
            <div class="col-4" >
                <%= link_to show_path(post.id), class:"text-decoration-none" do %>
                    <div class="insta-post post-square" style="background: url(<%= post.image.url %>)">
                        <div class="post-stats">
                        <i class="fa fa-heart fa-lg me-1"></i><%= post.total_likes_count %> likes
                        <i class="fa fa-comment fa-lg me-1 ms-3"></i><%= post.total_comments_count %> comments
                        </div>
                    </div>
                <% end %>
            </div>
        <% end %> 
    </div>
</div>
